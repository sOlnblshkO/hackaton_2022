<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qiwi_front" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AuthTitleText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultButton">
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="OrangeButton" parent="DefaultButton">
        <item name="backgroundTint">@color/orange</item>
    </style>
    <style name="DangerButton" parent="DefaultButton">
        <item name="backgroundTint">@color/red</item>
    </style>
    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
    </style>

    <style name="CircularIndicator">
        <item name="trackColor">@color/transparent05</item>
        <item name="indicatorColor">@color/orange</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Card">
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/lightGrey</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>